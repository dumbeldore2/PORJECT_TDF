<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraint_1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity3_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear1"

            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:orientation="horizontal"

            android:background="@drawable/background_listview_item_ma_3">

            <TextView
                android:id="@+id/text_1"

                android:layout_width="75dp"
                android:layout_height="wrap_content"

                android:text="1"
                android:textSize="48dp"

                android:gravity="center"
                android:textColor="@color/c10"
                />
            <ImageView
                android:id="@+id/image_1"

                android:layout_width="2dp"
                android:layout_height="match_parent"

                android:src="@drawable/line_yellow"
                android:layout_margin="1dp"/>
            <ImageView
                android:id="@+id/image_2"

                android:layout_width="2dp"
                android:layout_height="match_parent"

                android:src="@drawable/line_green"
                android:layout_margin="1dp"/>
            <ImageView
                android:id="@+id/image_3"

                android:layout_width="2dp"
                android:layout_height="match_parent"

                android:src="@drawable/line_red"
                android:layout_margin="1dp"/>
            <ImageView
                android:id="@+id/image_4"

                android:layout_width="2dp"
                android:layout_height="match_parent"

                android:src="@drawable/line_white"
                android:layout_margin="1dp"/>
            <TextView
                android:id="@+id/text_2"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="naam1"
                android:textColor="@color/c10"
                android:textSize="40dp"

                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginRight="25dp"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="15dp"

            android:orientation="horizontal"

            android:background="@drawable/background_listview_item_ma_3_name_list">

            <TextView
                android:id="@+id/text_3"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="25dp"

                android:text="- yago"
                android:textColor="@color/c10"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>