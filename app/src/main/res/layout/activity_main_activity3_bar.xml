<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    tools:context=".MainActivity3_bar"

    android:background="@drawable/background_listview_item_ma_3">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_1"

            android:layout_width="75dp"
            android:layout_height="match_parent"

            android:text="1"
            android:textSize="48dp"

            android:gravity="center"
            android:textColor="@color/c10"
            />

        <ImageView
            android:id="@+id/image_1"

            android:layout_width="2dp"
            android:layout_height="match_parent"

            android:src="@drawable/line_yellow"
            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/image_2"

            android:layout_width="2dp"
            android:layout_height="match_parent"

            android:src="@drawable/line_green"
            android:layout_margin="1dp"/>
        <ImageView
            android:id="@+id/image_3"

            android:layout_width="2dp"
            android:layout_height="match_parent"

            android:src="@drawable/line_red"
            android:layout_margin="1dp"/>
        <ImageView
            android:id="@+id/image_4"

            android:layout_width="2dp"
            android:layout_height="match_parent"

            android:src="@drawable/line_white"
            android:layout_margin="1dp"/>

        <TextView
            android:id="@+id/text_2"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:text="naam1"
            android:textColor="@color/c10"
            android:textSize="40dp"

            android:gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>